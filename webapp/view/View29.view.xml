<mvc:View
    controllerName="ejercicio15.project1.controller.View29"
     xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    xmlns="sap.m"
    displayBlock="true"
   >

 <Page
        id="page29"
        title="Ejercicio 29"
    >


<VBox class="sapUiSmallMargin">
    <Table
      id="myTable"
      items="{
        path: '/items'
      }"
      mode="MultiSelect"
      includeItemInSelection="true">
      <columns>
        <Column>
          <Text text="ID" />
        </Column>
        <Column>
          <Text text="Nombre" />
        </Column>
      </columns>
      <items>

<ColumnListItem>
          <cells>
            <Text text="{id}" />
            <Text text="{name}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>

    <Button
      text="Eliminar seleccionados"
      press="onDeleteSelected"
      class="sapUiSmallMarginTop" />
  </VBox>

</Page>
</mvc:View>