                                <Button id="_IDGenButton10" text="Ver detalles" type="Emphasized" press="onProductPress"/>
                            </VBox>
                            
                        </f:content>
                    </f:Card>
                </items>
            </VBox>
        </ScrollContainer>
    </Page>
</mvc:View>